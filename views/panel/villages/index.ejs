    <script>
      let hcenter = "<%=healthCenter._id%>";
      $(document).ready(() => {
        $(".select2").select2();
        let elementRow;
        let villagesTable = $("#villagesTable").DataTable({
          responsive: true,
        });
        $("#regVillage").on("click", () => {
          let villageName = $("#villageName").val();
          regVillage(
            {
              hcenter,
              name: villageName,
            },
            villagesTable
          );
        });
        /*         if (alert != null && alert == "success-delete") {
          swal({
            title: "کاربر با موفقیت حذف شد",
            text: "",
            confirmButtonText: "تایید",
            type: "success",
          });
        } */
        $(".sk-loader").remove();
        $(".table-responsive").css("visibility", "unset");
        $(document).on("click", ".deleteModal", (e) => {
          $(".deleteH").attr(
            "data-id",
            $(e.target).closest("a").attr("data-id")
          );
          elementRow = $(e.target).closest("a").closest("tr");
        });
        $(".deleteH").on("click", (e) => {
          let _id = $(e.target).attr("data-id");
          deleteVillage(_id, villagesTable, elementRow);
        });
        let editElm = null;
        $("#regHCInfo").on("click", (e) => {
          let name = $("#name").val();
          let province = $("#province").val();
          let city = $("#city").val();
          let village = $("#village").val();
          if ($(e.target).attr("data-action") == "create") {
            let data = JSON.stringify({
              name,
              province,
              city,
              village,
            });
            $.ajax({
              url: `<%=process.env.SITEURL%>/panel/hcenters/create`,
              type: "post",
              dataType: "json",
              contentType: "application/json",
              data: data,
              success: (res) => {
                if (res.statusCode === 200) {
                  // Message
                  swal({
                    title: "اطلاعات روستا با موفقیت ثبت شد",
                    text: "",
                    confirmButtonText: "تایید",
                    type: "success",
                  });

                  setTimeout(function () {
                    window.location.href = `<%=process.env.SITEURL%>/panel/healthcenters`;
                  }, 500);
                }
              },
              error: function (err) {
                console.log(err);
              },
            });
          } else {
            $(e.target).attr("data-action", "create");
            let data = JSON.stringify({
              _id: $(e.target).attr("data-id"),
              hInfo: { name, province, city, village },
            });
            $.ajax({
              url: `<%=process.env.SITEURL%>/panel/hcenters/edit`,
              type: "post",
              dataType: "json",
              contentType: "application/json",
              data: data,
              success: (res) => {
                if (res.statusCode === 200) {
                  // Message
                  $(editElm.target)
                    .closest("tr")
                    .children()
                    .eq(0)
                    .text(province);
                  $(editElm.target).closest("tr").children().eq(1).text(city);
                  $(editElm.target).closest("tr").children().eq(2).text(name);
                  $(editElm.target)
                    .closest("tr")
                    .children()
                    .eq(3)
                    .text(village);

                  swal({
                    title: "اطلاعات روستا با موفقیت ثبت شد",
                    text: "",
                    confirmButtonText: "تایید",
                    type: "success",
                  });
                  $("#input-modal").modal("hide");
                }
              },
              error: function (err) {
                console.log(err);
              },
            });
          }
        });

        $(document).on("click", ".editHCenter", function(e){
          $("#updateBtn").attr(
            "data-id",
            `${$(e.target).closest('.record-v').find('.editHCenter').attr("data-id")}`
          );
          $("#e_villageName").val(
            $(e.target).closest("tr").find("td:nth-child(4)").text().trim()
          );
          editElement = $(e.target).closest("tr");
        });
        $("#updateBtn").on("click", (e) => {
          let id = $("#updateBtn").attr("data-id");
          let villageName = $("#e_villageName").val();

          let village = {
            id,
            name:villageName,
          };
          $("#updateBtn").prop("disabled", true);
          $("#updateBtn span").removeClass("visually-hidden");
          let data = editVillage(village, editElement);
        });
      });
    </script>
